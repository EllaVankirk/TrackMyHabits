@model List<TrackMyHabit.Models.AllDates>

<h1>All Dates</h1>
<a asp-action="Add">Add Date</a>
<a asp-action="Index">Back to List</a>

@if (Model.Count == 0)
{
    <p> No dates yet!</p>

}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Dates</th>
        </tr>
        @foreach (var date in Model)
        {
            <tr>
                <td>@date.ID</td>
                <td>@date.Date.ToString("MM/d/yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@date.ID">Delete</a>
                </td>
            </tr>
        }
    </table>
}