@model List<TrackMyHabit.Models.AllDates>
<div class="row">
    <div class="col-md-3 offset-3">
        <h1>All Dates</h1>
        <hr />
        <a asp-action="Add" class="nav-item px-2">Add Date</a>
        <a asp-controller="Habits" asp-action="Index" class="nav-item px-2">List of my habits</a>
        <div>
            <br />
            @if (Model.Count == 0)
            {
                <p>Add some dates to add to your habits</p>
            }
            else
            {
                @foreach (var date in Model)
                {
                    <ul>
                        <li style="list-style:none; line-height:200%">@date.Date.ToString("MM/dd/yyyy") <a asp-action="Delete" asp-route-id="@date.ID">Delete</a></li>
                    </ul>
                }
            }
        </div>
    </div>
</div>
