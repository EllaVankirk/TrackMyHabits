@model TrackMyHabit.Models.Calendars


<div class="container-fluid">
    <h1 class="text-lg-center"> Habit Tracker </h1>
    @*<p>Click the day to add a color coded habit!</p>*@
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-lg-10" style="background-color:lavenderblush;">
            <table class="text-center">
                <tr>
                    <th class="col-sm-1">Monday</th>
                    <th class="col-sm-1">Tuesday</th>
                    <th class="col-sm-1">Wednesday</th>
                    <th class="col-sm-1">Thursday</th>
                    <th class="col-sm-1">Friday</th>
                    <th class="col-sm-1">Saturday</th>
                    <th class="col-sm-1">Sunday</th>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="container-fluid">
    @foreach (var day in @Model.Dates)
            {
                @if (day.DayOfWeek == DayOfWeek.Sunday && day != @Model.StartDate)
                {
                    <div class="w-100">
                        <p>day</p>
                    </div>
                }
            }

</div>
