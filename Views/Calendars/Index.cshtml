@model TrackMyHabit.Models.Calendars
<div class="container">
    <h1 class="display-4 mb-4 text-center"> Calendar </h1>
    <p>Click the day to add a color coded habit!</p>
    <div class="row d-sm-flex p-1 bg-dark text-white">
        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
        {
            <h5 class="col-sm p-1 text-center">@day</h5>
        }
    </div>
    <div class="row border border-right-0 border-bottom-0">
            @foreach (var days in Model.Dates)
            {
                 <div class="day col-sm p-2 border border-left-0 border-top-0 d-none d-sm-inline-block bg-light text-muted">@days.Day</div>
            }

        </div>

