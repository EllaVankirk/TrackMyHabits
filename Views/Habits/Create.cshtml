@model TrackMyHabit.Models.HabitsViewModels.CreateHabitWithDateViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Create a new habit</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HabitName" class="control-label"></label>
                <input asp-for="HabitName" class="form-control" />
                <span asp-validation-for="HabitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HabitColor" class="control-label"></label>
                <input type="color" asp-for="HabitColor" class="control-Label" />
                <span asp-validation-for="HabitColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HabitDate" ></label>
                <input asp-for="HabitDate" type="date" value=""/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
