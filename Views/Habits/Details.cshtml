@model TrackMyHabit.Models.HabitsViewModels.HabitDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-6 offset-md-3">
    <h1>Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateText)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DateText == "")
            {
                <a asp-controller="AllDates" asp-action="Add">Click here to create a date</a>
            }
            else
            {
                @Html.DisplayFor(model => Model.DateText)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Colour)
        </dt>
        <dd class="col-sm-2" style="background-color:@Model.Colour; color:@Model.Colour">
            @Html.DisplayFor(model => model.Colour)
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.HabitID" class="nav-item px-2">Edit</a>
        <a asp-controller="AllDates" asp-action="AddHabit" asp-route-id="@Model.HabitID" class="nav-item px-2">Add Date</a>
        <a asp-action="Index" class="nav-item px-2">Back to List</a>
    </div>
</div>

