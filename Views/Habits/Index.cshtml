@model IEnumerable<TrackMyHabit.Models.Habits>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="nav-item px-2">Create New Habit</a>
    <a asp-controller="AllDates" asp-action="Add" class="nav-item px-2">Add New Date</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HabitInitial)
            </td>
            <td style="background-color:@item.Colour">
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                <a asp-controller="AllDates" asp-action="AddHabit" asp-route-id="@item.ID" class="nav-item px-2">Add Date</a>
                <a asp-action="Edit" asp-route-id="@item.ID" class="nav-item px-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="nav-item px-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="nav-item px-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
