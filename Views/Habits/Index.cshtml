@model IEnumerable<TrackMyHabit.Models.Habits>

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-family:'Open Sans', sans-serif">Collection of habits</h1>

<p>
    <a asp-action="Create" style="font-family:'Dancing script' cursive">Create New Habit</a>
    <a asp-controller="AllDates" asp-action="Add" class="nav-item px-2" style="font-family:'Lato' sans-serif">Add New Date</a>
    <a asp-controller="AllDates" asp-action="Index" class="nav-item px-2" style="font-family:'Lato' sans-serif">View List of Dates</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>Find a habit: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-action="Index">Back to full list</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr style="font-family:'Lato' sans-serif">
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="font-family:'Open Sans', sans-serif">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="background-color:@item.Colour">
            </td>
            <td>
                <a asp-controller="AllDates" asp-action="AddHabit" asp-route-id="@item.ID" class="nav-item px-2">Add Date</a>
                <a asp-action="Edit" asp-route-id="@item.ID" class="nav-item px-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="nav-item px-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="nav-item px-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
